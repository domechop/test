<table class="table table-sm table-striped table-bordered">



    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>


    <tbody>
        @if (Orders?.Count() > 0)
        {
            @foreach (Booksite.Models.Summary s in Orders)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Zip</td>
                    <th>Summary</th>
                    <th>Quantity</th>

                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="@(x => OrderSelected.InvokeAsync(s.SummaryId))">
                            @ButtonLabel
                        </button>
                    </td>

                </tr>



                @foreach (BasketLineItem bli in s.Lines)
                {
                    <tr>
                        <td colspan="2"></td>
                        <td>@bli.Book.Author</td>
                        <td>@bli.Quantity</td>
                    </tr>

                }
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Orders</td>
            </tr>

        }

    </tbody>
</table>
@code {

    [Parameter]
    public string TableTitle { get; set; } = "Orders";

    [Parameter]
    public IEnumerable<Booksite.Models.Summary> Orders { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Shipped";

    [Parameter]
    public EventCallback<int> OrderSelected { get; set; }

}
